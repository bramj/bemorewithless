.row
  .span2
    = time_ago_in_words(a.created_at)
.row
  .span8
    - if a.owner
      = link_to a.owner.username, a.owner
    - else
      someone
    = content_for :action
.row
  .span2
    - if a.owner
      = image_tag(a.owner.avatar_url(:mini).to_s)
    - else
      = image_tag "/assets/fallback/medium_default.png"
  .span6
    = yield
%hr
